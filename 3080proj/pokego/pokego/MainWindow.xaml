<Window x:Class="pokego.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Poke Go" Height="800" Width="1000" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Window.Background>
        <ImageBrush ImageSource="Resources/pokebg.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Label x:Name="lblStartGame" Content="Click Screen to Start" HorizontalAlignment="Left" Height="39" Margin="392,674,0,0" VerticalAlignment="Top" Foreground="White" Opacity="1" FontSize="20" FontFamily="Century Gothic" FontWeight="Bold"/>
        <Button x:Name="btnStart" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="994" Click="btnStart_Click" Grid.ColumnSpan="3" Height="772" Opacity="0">
        </Button>
    </Grid>
</Window>
